/**
 * @file font_license_dialog.rc
 * @brief Font license agreement dialog for custom font usage
 */
#include <windows.h>
#include "resource.h"

#pragma code_page(65001)

/** @brief Font license agreement dialog with expanded layout */
IDD_FONT_LICENSE_DIALOG DIALOGEX 0, 0, 320, 200
STYLE DS_MODALFRAME | DS_CENTER | WS_POPUP | WS_CAPTION | WS_SYSMENU
CAPTION ""
FONT 9, "Segoe UI"
BEGIN
    /** Main license agreement text area */
    LTEXT           "", IDC_FONT_LICENSE_TEXT, 10, 10, 300, 120

    /** Separator line and info text */
    LTEXT           "", IDC_GOOGLE_FONTS_INFO, 10, 135, 300, 12
    
    /** Google Fonts recommendation text parts */
    LTEXT           "", IDC_GOOGLE_FONTS_PREFIX, 10, 150, 80, 12
    CONTROL         "", IDC_GOOGLE_FONTS_LINK, "Static", SS_NOTIFY, 90, 150, 80, 12
    LTEXT           "", IDC_GOOGLE_FONTS_SUFFIX, 170, 150, 140, 12

    /** Agreement confirmation button */
    DEFPUSHBUTTON   "", IDC_FONT_LICENSE_AGREE_BTN, 210, 178, 50, 14
    
    /** Cancel/decline button */
    PUSHBUTTON      "", IDC_FONT_LICENSE_CANCEL_BTN, 265, 178, 45, 14
END
