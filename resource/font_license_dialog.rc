/**
 * @file font_license_dialog.rc
 * @brief Font license agreement dialog for custom font usage
 */
#include <windows.h>
#include "resource.h"

#pragma code_page(65001)

/** @brief Font license agreement dialog with compact layout */
IDD_FONT_LICENSE_DIALOG DIALOGEX 0, 0, 200, 130
STYLE DS_MODALFRAME | DS_CENTER | WS_POPUP | WS_CAPTION | WS_SYSMENU
CAPTION ""
FONT 9, "Segoe UI"
BEGIN
    /** Compact license agreement text */
    LTEXT           "", IDC_FONT_LICENSE_TEXT, 10, 10, 180, 70
    
    /** Agreement confirmation button */
    DEFPUSHBUTTON   "", IDC_FONT_LICENSE_AGREE_BTN, 90, 108, 50, 14
    
    /** Cancel/decline button */
    PUSHBUTTON      "", IDC_FONT_LICENSE_CANCEL_BTN, 145, 108, 45, 14
END
